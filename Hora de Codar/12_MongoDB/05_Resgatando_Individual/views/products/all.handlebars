<h1>Produtos</h1>
<div class="products">
    {{#each products}}
        <div class="product">
            <img src="{{this.image}}" alt="Camisa do Flamengo">
            <h3>{{this.name}}</h3>
            <p>R${{this.price}}</p>
            <div class="actions">
                <a href="/products/{{this._id}}">Dethales</a>
            </div>
        </div>
    {{/each}}
</div>