<h1>{{categorias.nome}}</h1>
{{#each postagens}}
   <div class="card mt-4">
      <div class="card-body">
         <h3>{{titulo}}</h3>
         <p>{{descricao}}</p>
         <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia mais</button></a>
         <hr>
         <small>Data de Publicação: {{data}}</small>
      </div>
   </div>
{{else}}
   <p>Nenhuma postagem encontrada.</p>
{{/each}}