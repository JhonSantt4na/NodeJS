{{#each erros}}
   <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
   <div class="card-body">
      <form action="/admin/postagens/nova" method="POST">
         <h4>Nova Postagem: </h4>
         <label for="titulo" class="mt-1">Titulo:</label>
         <input type="text" name="titulo" class="form-control" required>
         <label for="slug" class="mt-1">Slug:</label>
         <input type="text" name="slug" class="form-control" required>
         <label for="descricao" class="mt-1">Descrição:</label>
         <input type="text" name="descricao" class="form-control" required>
         <label for="conteudo" class="mt-1">Conteudo:</label>
         <textarea class="form-control" name="conteudo" id="" class="form-control" required></textarea>
         <label for="categoria" class="mt-1">Categoria:</label>
         <select name="categoria" class="form-select"> 
            {{#each categorias}}
               <option value="{{_id}}">{{nome}}</option>
            {{else}}
               <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
         </select>
         <button type="submit" class="btn btn-success mt-3">Criar Postagem</button>
      </form>
   </div>
</div>